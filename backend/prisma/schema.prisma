datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

enum MatchStatus {
  scheduled
  live
  finished
}



model Admin {
  id      Int @id @default(autoincrement())
  userName String @unique
  password String
}

model Team {
  id   Int    @id @default(autoincrement())
  name String @unique
  score Int? @default(0)



  matchesAsTeam1 Match[] @relation("Team1")
  matchesAsTeam2 Match[] @relation("Team2")
}

model MatchService {
  id Int    @id @default(autoincrement())
  round     Int
  team1Id Int
  team2Id Int

  team1 Team @relation("Team1", fields: [team1Id], references: [id], onDelete: Restrict)
  team2 Team @relation("Team2", fields: [team2Id], references: [id], onDelete: Restrict)

  status MatchStatus @default(scheduled)
  duration Int
  endTime   DateTime?

  firstTeamScore  Int?
  secondTeamScore Int?

  @@index([team1Id])
  @@index([team2Id])
}